<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/task_name_Lay_add_new_task"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Task name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        />


    <Button
        android:id="@+id/task_startDate_Lay_add_new_task"
        android:text="start date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"

        />

    <Button
        android:id="@+id/task_endDate_Lay_add_new_task"
        android:text="end date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/task_duration_Lay_add_new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0 Days"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/add_new_task_Lay_add_new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="#00796B"
        android:text="Add"
        android:textColor="#ffffff" />



</LinearLayout>