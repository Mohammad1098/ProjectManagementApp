<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/task_name_Lay_task_resource_allocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:textSize="18sp"
        tools:text="Task Name"
        />


    <Button
        android:id="@+id/resource_selected_Lay_task_resource_allocation"
        android:text="select resources"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="30dp"

        />


    <TextView
        android:id="@+id/display_resource_selected_Lay_task_resource_allocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ProjectManager , ProjectManager , ProjectManager ,ProjectManager , ProjectManager ,ProjectManager , "
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/add_resource_to_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Add"
        android:textColor="#ffffff" />



</LinearLayout>