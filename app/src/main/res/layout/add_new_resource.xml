<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Spinner
        android:id="@+id/resource_type_Spinner_Lay_add_new_resource"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        />


    <EditText
        android:id="@+id/resource_name_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Resource name"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:id="@+id/material_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Material Name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/number_of_source_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberSigned"
        android:hint="Number of source"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/salary_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:hint="Salary per hour"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/over_time_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:hint="Over Time"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/Cost_Use_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:hint="Cost"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


    <Button
        android:id="@+id/add_new_resource_Lay_add_new_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="#00796B"
        android:text="Add"
        android:textColor="#ffffff" />



</LinearLayout>

