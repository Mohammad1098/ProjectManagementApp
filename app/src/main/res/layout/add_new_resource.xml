<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/resource_name_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Resource name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        />


    <Spinner
        android:id="@+id/resource_type_Spinner_Lay_add_new_resource"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"

        />


    <EditText
        android:id="@+id/material_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Material"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/number_of_source_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberSigned"
        android:hint="Number of source"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/salary_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:hint="Salary per hour"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/over_time_cost_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:hint="Over Time"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/Cost_Use_Lay_add_new_resource"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="numberSigned"
        android:hint="Cost/Use"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />



</LinearLayout>

